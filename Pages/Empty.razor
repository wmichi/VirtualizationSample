@page "/empty-content"

<h3>Empty Content</h3>

<Virtualize Items="@stringList">
    <ItemContent>
        <p>
            @context
        </p>
    </ItemContent>
    <EmptyContent>
        <p>
            There are no strings to display.
        </p>
    </EmptyContent>
</Virtualize>

@code {
    private List<string>? stringList;
    protected override void OnInitialized() => stringList ??= new();
}
